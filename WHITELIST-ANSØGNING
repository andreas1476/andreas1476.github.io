document.getElementById("whitelistForm").addEventListener("submit", function(e) {
    e.preventDefault();

    const data = {
        content: null,
        embeds: [{
            title: "üìã Ny whitelist-ans√∏gning",
            color: 3447003,
            fields: [
                { name: "Discord", value: document.getElementById("discord").value },
                { name: "Alder", value: document.getElementById("age").value },
